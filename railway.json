{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "nixpacksPlan": {
            "phases": {
                "setup": {
                    "nixPkgs": ["nodejs", "yarn", "python38Full"]
                },
                "install": {
                    "cmds": [
                        "cd bot && yarn install",
                        "cd api && python3.8 -m ensurepip",
                        "cd api && python3.8 -m pip install --no-cache-dir -r requirements.txt"
                    ]
                }
            }
        }
    },
    "deploy": {
        "startCommand": "sh -c 'cd api && python3.8 app.py & cd bot && node index.js'"
    }
}
