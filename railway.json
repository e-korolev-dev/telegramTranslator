{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "nixpacksPlan": {
            "phases": {
                "setup": {
                    "nixPkgs": ["nodejs", "yarn", "python38Full", "python38Packages.pip", "python38Packages.virtualenv"]
                },
                "install": {
                    "cmds": [
                        "cd bot && yarn install",
                        "cd api && python3.8 -m virtualenv venv",
                        "cd api && source venv/bin/activate && pip install --no-cache-dir --disable-pip-version-check -r requirements.txt"
                    ]
                }
            }
        }
    },
    "deploy": {
        "startCommand": "sh -c 'cd api && source venv/bin/activate && python app.py & cd bot && node index.js'"
    }
}
