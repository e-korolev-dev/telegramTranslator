{
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["nodejs", "yarn", "python38"]
        },
        "install": {
          "cmds": [
            "cd bot && yarn install",
            "cd api && python3.8 -m ensurepip",
            "cd api && python3.8 -m pip install -r requirements.txt"
          ]
        },
        "start": {
          "cmd": "sh -c 'cd api && nohup python3.8 app.py & cd bot && node index.js'"
        }
      }
    }
  }
}
