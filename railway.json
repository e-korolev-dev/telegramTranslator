{
  "$schema": "https://railway.app/railway.schema.json",
  "nodeVersion": "20.x",
  "build": {
    "builder": "NIXPACKS",
    "node": "20.x",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": [
            "nodejs",
            "yarn",
            "python39Full",
            "python39Packages.pip",
            "python39Packages.virtualenv"
          ]
        },
        "install": {
          "cmds": [
            "cd bot && yarn install",
            "cd api && python3.10 -m venv venv",
            "cd api && . venv/bin/activate && pip install --no-cache-dir --disable-pip-version-check --no-warn-script-location -r requirements.txt"
          ]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "sh -c 'cd api && . venv/bin/activate && python app.py & cd bot && yarn run start:dev'"
  }
}
